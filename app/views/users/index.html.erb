<% provide(:title, 'All Users') %>
<h1 class="center">All Users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user %>
      <%= link_to user.name, edit_user_path(user) %>
      <% if current_user?(user) %>
        | ME!
      <% elsif current_user.admin? %>
        | <%= link_to "delete", user, method: :delete,
                                      data: { confirm: "Confirm delete user" } %><br>
      Status: <%= user.usertype %><br>
      Email:  <%= user.email %>
      <% end %>
    </li>
  <% end %> 
</ul>
