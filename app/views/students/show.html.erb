<% provide(:title, "Student") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
          <%= gravatar_for current_user %>
          <%= current_user.name %>
      </h1>
      <p>
      </p>
    </section>
  </aside>
</div><br>
<% if current_student.active %>
  <div class="row">
     <div class="col-md-6 col-md-offset-3">
       <%= form_for(current_student) do |f| %>
          <%= f.label :currentlevel,   "Level:   #{current_student.currentlevel}, " %>
          <%= f.label :currentlessson, "Lesson:  #{current_student.currentlesson}" %><br><br>
          <%= f.submit "Begin/continue lesson", class: "btn btn-primary" %>
       <% end %>
     </div>
  </div>
<% else %>
   <p class = "instructions">Hi <%= current_user.name %>, you have been approved as a student,
                             waiting for your first lesson. I am so excited to have you
                             on board!!!</p>
<% end %>

